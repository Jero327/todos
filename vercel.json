{
  "version": 2,
  "builds": [
    {
      "src": "client/**",
      "use": "npm run build:client",
      "config": { "distDir": "client/dist" }
    },
    {
      "src": "server/**",
      "use": "npm run build:server",
      "config": { "distDir": "server/dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/dist/index.ts" },
    { "src": "/(.*)", "dest": "client/dist/$1" }
  ]
}
